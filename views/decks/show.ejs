<main>
  <h1><%= deck.name %></h1>
  <h2>A Deck By : <%= deck.owner.name %></h2>
  <div class="deck-display">
    <% deck.deckList.forEach(card => { %>
      <img src="https://gatherer.wizards.com/Handlers/Image.ashx?multiverseid=<%= card %> &type=card" alt="multiverseid: <%= card %>">
    <% }) %>
  </div>

  <h2>Reviews:</h2>
  <div class="review-box">
    <% deckReviews.forEach(review => { %>
      <% if (review.content != '') { %>
        <form action="/decks/<%= deck._id %>/deckReviews/<%= review._id %>?_method=DELETE"
              method="POST"  
        >
          <p>(<%= review.rating %>/5) : 
              <%= review.content %> 
            <% if (review.owner.equals(user?.profile._id)) { %>
              <button type="submit">x</button>
            <% } %>
          </p>
        </form>
      <% } %>
    <% }) %>
  </div>

